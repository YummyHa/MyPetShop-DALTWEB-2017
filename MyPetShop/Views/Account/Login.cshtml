@using MyPetShop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class="header_text sub">
    <h4><span>Login to your account</span></h4>
</section>

<section class="main-content">				
    <div class="row">
        <div class="span5" style="padding-left: 30px">					
            <h4 class="title"><span class="text"><strong>Login</strong> Form</span></h4>
            
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="next" value="/">
                <fieldset>
                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="control-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input-xlarge", @placeholder = "email@example.com" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="control-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="controls">
                            @Html.PasswordFor(m => m.Password, new { @class = "input-xlarge", @placeholder = "enter your password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="control-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <input tabindex="3" type="submit" value="Log in" class="btn btn-inverse large" />                      
                    </div>

                </fieldset>
            }
            
            <p>
                @Html.ActionLink("Register as a new user", "Register")
            </p>
            
