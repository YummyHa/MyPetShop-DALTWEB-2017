@model MyPetShop.ViewModels.PetViewModel

@{
    ViewBag.Title = "AddPetImage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Add PetImage</h4>
                    </div>
                    <div class="content">
                        <form>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Uri</label>
                                        <input type="text" class="form-control" name="txtname">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="sel1">PetId</label>
                                        <br />
                                        <select class="form-control" id="sel1" name="petid">
                                            @foreach (var item in Model.Pets)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>

                                    </div>
                                </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Thêm PetImage</button>
                            <button type="button" class="btn database"><a href="@Url.Action("PetImage", "Admin")">Về Pets</a></button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
}