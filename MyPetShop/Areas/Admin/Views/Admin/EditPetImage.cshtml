@model MyPetShop.ViewModels.PetViewModel
@{
    ViewBag.Title = "EditPetImage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Edit PetImage</h4>
            </div>
            <div class="content">
                <form>
                    @foreach (var item in Model.PetImages)
                    {
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>ID (Mặc Định & Tự Tăng)</label>
                                    <input type="text" class="form-control" disabled placeholder="@item.Id">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Uri</label>
                                    <input type="text" class="form-control" name="txturi" value="@item.Uri">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="sel1">PetID</label>
                                    <br />
                                    @Html.DropDownList("PetID")
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right">Sữa PetImage</button>
                            <button type="button" class="btn database"><a href="@Url.Action("PetImage", "Admin")">Về PetImage</a></button>
                    }
                </form>
            </div>
        </div>
    </div>
}
