@model MyPetShop.ViewModels.PetViewModel

@{
    ViewBag.Title = "ThemPet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Add Pet</h4>
                    </div>
                    <div class="content">
                        <form>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Name Pet</label>
                                            <input type="text" class="form-control" name="txtname" >
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Age</label>
                                            <input type="text" class="form-control" name="txtage" >
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Price</label>
                                            <input type="text" class="form-control" name="txtprice" >
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="sel1">CategoryPetId</label>
                                            <br />
                                            <select class="form-control" id="sel1" name="categorypetid">
                                                @foreach (var item in Model.CategoryPets)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }                                          
                                            </select>

                                        </div>
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="5" class="form-control" name="txtdes"></textarea>
                                    </div>
                                </div>
                            </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Status</label>
                                            <input type="text" class="form-control" name="txtstatus" >
                                        </div>
                                    </div>

                                </div>
                                <button type="submit" class="btn btn-info btn-fill pull-right">Thêm Pet</button>
                                <button type="button" class="btn database"><a href="@Url.Action("Pet", "Admin")">Về Pets</a></button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
}